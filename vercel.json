{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "backend/server.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/server.js" },
    { "source": "/(.*)", "destination": "/frontend/build/index.html" }
  ],
  "env": { "NODE_ENV": "production" },
  "installCommand": "(cd backend && npm ci || npm i) && (cd frontend && npm ci || npm i)",
  "buildCommand": "cd frontend && npm run build"
}
